{
  "extends": [
    "standard",
    "prettier"
  ],

  "rules": {
    "prettier/prettier": ["error", {"singleQuote": true}],
    
    "camelcase": 0,
    "no-template-curly-in-string": 0,
    "standard/computed-property-even-spacing": 0,

    "linebreak-style": [2, "unix"],
    "one-var": 0,

    "array-callback-return": 2,
    "no-nested-ternary": 2,
    "no-alert": 2,
    "no-useless-call": 2,
    "radix": 2
  }
}
